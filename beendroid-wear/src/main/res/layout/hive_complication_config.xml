<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/hive_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hive_id_label"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/hive_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hive_id_label"
        android:layout_centerInParent="true"
        android:text="f07713a2a969418a"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hive_id"
        android:layout_centerInParent="true"
        android:id="@+id/hive_id_btn_ok"
        android:background="@drawable/accept_deny_dialog_positive_bg"
        android:text="OK"
        />

</RelativeLayout>